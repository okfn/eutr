{% macro orglist(orgs) %}
  <table class="condensed-table zebra-striped">
    {% for org in orgs %}
      <tr>
        <td><a href="{{ url_for('entity', id=org.id)}}">
        {{ org.name }}</a></td>
        <td><span class="help-inline">
          {% if org.type == 'representative' %}
            Representative
          {% else %}
            Organisation
          {% endif %}
        </span></td>
      </tr>
    {% endfor %}
  </table>
{% endmacro %}

